{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "preserveSymlinks": false,
    "paths": {
      "@/*": ["src/*"],
      "@/public/*": ["public/*"]
    }
  },
  "include": ["next-env.d.ts", "typings.d.ts", "**/*.ts", "**/*.tsx", "src/modules/accounts/components/BillingHistory"],
  "exclude": ["node_modules", ".next"]
}
